<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- Dark Theme – Brush Resources                           -->
    <!-- Every key here MUST also exist in LightTheme.xaml       -->
    <!-- ═══════════════════════════════════════════════════════ -->

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="AppBackground"          Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SurfaceBackground"      Color="#252526"/>
    <SolidColorBrush x:Key="SidebarBackground"      Color="#252526"/>
    <SolidColorBrush x:Key="HeaderBackground"        Color="#2D2D2D"/>
    <SolidColorBrush x:Key="HeaderBorderBrush"       Color="#3C3C3C"/>
    <SolidColorBrush x:Key="OverlayBackground"       Color="#1E1E1E"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary"            Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextSecondary"          Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TextMuted"              Color="#808080"/>
    <SolidColorBrush x:Key="TextPlaceholder"        Color="#6A6A6A"/>

    <!-- Accent / Brand -->
    <SolidColorBrush x:Key="PrimaryBlue"            Color="#3794FF"/>
    <SolidColorBrush x:Key="PrimaryBlueForeground"  Color="White"/>

    <!-- Semantic -->
    <SolidColorBrush x:Key="SuccessGreen"           Color="#4EC967"/>
    <SolidColorBrush x:Key="SuccessGreenForeground" Color="White"/>
    <SolidColorBrush x:Key="WarningOrange"          Color="#E8912D"/>
    <SolidColorBrush x:Key="ErrorRed"               Color="#F85149"/>
    <SolidColorBrush x:Key="DangerRed"              Color="#F85149"/>
    <SolidColorBrush x:Key="DangerRedForeground"    Color="White"/>

    <!-- Inputs -->
    <SolidColorBrush x:Key="InputBackground"        Color="#3C3C3C"/>
    <SolidColorBrush x:Key="InputForeground"        Color="#CCCCCC"/>
    <SolidColorBrush x:Key="InputBorder"            Color="#555555"/>
    <SolidColorBrush x:Key="InputFocusBorder"       Color="#3794FF"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonDefaultBackground"   Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ButtonDefaultForeground"   Color="#CCCCCC"/>
    <SolidColorBrush x:Key="IconButtonForeground"      Color="#808080"/>
    <SolidColorBrush x:Key="IconButtonHoverForeground" Color="#3794FF"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="DataGridHeaderBackground"   Color="#333333"/>
    <SolidColorBrush x:Key="DataGridHeaderForeground"   Color="#CCCCCC"/>
    <SolidColorBrush x:Key="DataGridRowAltBackground"   Color="#2A2A2A"/>
    <SolidColorBrush x:Key="DataGridGridLines"          Color="#3C3C3C"/>
    <SolidColorBrush x:Key="DataGridSelectionBackground" Color="#264F78"/>
    <SolidColorBrush x:Key="DataGridSelectionForeground" Color="#FFFFFF"/>

    <!-- Navigation -->
    <SolidColorBrush x:Key="NavButtonHoverBackground"    Color="#333333"/>
    <SolidColorBrush x:Key="NavButtonSelectedBackground" Color="#2A3A4A"/>

    <!-- Separator -->
    <SolidColorBrush x:Key="SeparatorBrush"         Color="#3C3C3C"/>

</ResourceDictionary>
