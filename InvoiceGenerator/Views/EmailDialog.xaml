<Window x:Class="InvoiceGenerator.Views.EmailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Invoice Email" Width="600" SizeToContent="Height" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border Padding="20">
        <StackPanel>
        <TextBlock Text="Send Invoice via Email" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="To:" VerticalAlignment="Center"/>
            <TextBox Name="ToTB" Grid.Column="1" Height="38" Padding="10,6" IsReadOnly="True" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Subject:" VerticalAlignment="Center"/>
            <TextBox Name="SubjectTB" Grid.Column="1" Height="38" Padding="10,6" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Body:" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox Name="BodyTB" Grid.Column="1" Height="150" Padding="10" AcceptsReturn="True" TextWrapping="Wrap"/>
        </Grid>

        <TextBlock Name="AttachmentTB" Margin="0,0,0,20" Foreground="#666"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SendBtn" Content="Send" Width="80" Padding="10" Click="SendBtn_Click" Background="#107C10" Foreground="White" Margin="0,0,10,0"/>
            <Button Name="CancelBtn" Content="Cancel" Width="80" Padding="10" Click="CancelBtn_Click"/>
        </StackPanel>
        </StackPanel>
    </Border>
</Window>
