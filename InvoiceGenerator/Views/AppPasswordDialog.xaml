<Window x:Class="InvoiceGenerator.Views.AppPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Password" Width="420" SizeToContent="Height"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="True">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Name="HeaderText" Text="Unlock Invoice Generator" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Name="SubText" Text="Enter the app password to continue." Foreground="#666" Margin="0,0,0,20"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password:" VerticalAlignment="Center"/>
                <PasswordBox Name="PasswordBox" Grid.Column="1" Height="34" Padding="8"/>
            </Grid>

            <StackPanel Name="ConfirmPanel" Visibility="Collapsed" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Confirm:" VerticalAlignment="Center"/>
                    <PasswordBox Name="ConfirmPasswordBox" Grid.Column="1" Height="34" Padding="8"/>
                </Grid>
            </StackPanel>

            <TextBlock Name="HintText" Foreground="#666" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="ContinueBtn" Content="Continue" Width="100" Padding="10" Click="ContinueBtn_Click" Background="#007ACC" Foreground="White" Margin="0,0,10,0"/>
                <Button Name="CancelBtn" Content="Exit" Width="80" Padding="10" Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
